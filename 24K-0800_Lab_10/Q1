#include<iostream>

using namespace std;

class minheap {
	
	int heap[100];
	int size;
	
	void bubbleUp(int index) {
        while (index > 0) {
            int parent = (index - 1) / 2;

            if (heap[index] < heap[parent]) {
                swap(heap[index], heap[parent]);
                index = parent;
            } else {
                break;
            }
        }
    }
	public :
		
	minheap() {
        size = 0;
    }

    void insert(int value) {
        if (size >= 100) {
            cout << "Heap is full!" << endl;
            return;
        }

        heap[size] = value; 
        bubbleUp(size);     
        size++;
    }

    void display() {
        cout << "Heap array: ";
        for (int i = 0; i < size; i++) {
            cout << heap[i] << " ";
        }
        cout << endl;
    }
		
};
int main () {
	minheap h;
	
	h.insert(1);
    h.insert(3);
    h.insert(4);
    h.insert(5);
    h.insert(6);

    cout << "Before inserting 2 :" << endl;
    h.display();

    h.insert(2);

    cout << "After inserting 2 : " << endl;
    h.display();
	
	
	return 0;
}
